<extension version="4.0.0" type="component" method="upgrade">
    <name>com_compatibility</name>
    <creationDate>2021-04-26</creationDate>
    <author>Nicholas K. Dionysopoulos</author>
    <authorEmail>nicholas@akeeba.com</authorEmail>
    <authorUrl>https://www.akeeba.com</authorUrl>
    <copyright>Copyright (c)2017-2021 Nicholas K. Dionysopoulos / Akeeba Ltd</copyright>
    <license>GNU GPL v3 or later</license>
    <version>revACCB633</version>
    <description>Compatibility page for Akeeba Ltd</description>
    <namespace path="src">Akeeba\Component\Compatibility</namespace>

    <!-- Public front end files -->
    <files folder="frontend">
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>

        <filename>.htaccess</filename>
        <filename>web.config</filename>
    </files>

    <!-- Front end translation files -->
    <languages folder="frontend/language">
        <language tag="en-GB">en-GB/com_compatibility.ini</language>
    </languages>

    <!-- Media files -->
    <media destination="com_compatibility" folder="media">
        <folder>css</folder>
        <folder>fonts</folder>
    </media>

    <!-- Administrator back-end section -->
    <administration>
        <!-- Administration menu -->
        <menu view="main">COM_COMPATIBILITY</menu>

        <!-- Back-end files -->
        <files folder="backend">
            <folder>language</folder>
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>

            <filename>.htaccess</filename>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>web.config</filename>
        </files>

        <!-- Back-end translation files -->
        <languages folder="backend/language">
            <language tag="en-GB">en-GB/com_compatibility.ini</language>
            <language tag="en-GB">en-GB/com_compatibility.sys.ini</language>
        </languages>

    </administration>

    <!-- Installation / uninstallation script file -->
    <scriptfile>script.com_compatibility.php</scriptfile>
</extension>